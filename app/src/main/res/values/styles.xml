<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Orange.Button" parent="android:Widget">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">19.5sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="White.Text" parent="android:Widget">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="White.View" parent="android:Widget">
        <item name="background">@android:color/white</item>
    </style>

    <style name="Orange.View" parent="android:Widget">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Content.Header.Gros" parent="android:Widget">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Content.Header.SubHeader" parent="android:Widget">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Content.Header.SubHeader.Grey" parent="android:Widget">
        <item name="android:textColor">#FF878686</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Content.Header.SubHeader.Boldgrey" parent="android:Widget">
        <item name="android:textColor">#FF878686</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Content.Header.Klien" parent="android:Widget">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Content.Header.Mittel.NoBold" parent="android:Widget">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
