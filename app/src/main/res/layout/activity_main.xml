<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mail.dinesh.mailapplication.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/metalbg"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/logo"
            android:src="@mipmap/ic_launcher"
            android:layout_height="162.5dp"
            android:layout_width="182.5dp"
            android:contentDescription="Logo"
            android:layout_alignTop="@+id/metalbg"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/firmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Content.Header.Mittel.NoBold"
            android:text="@string/desc"
            android:layout_marginTop="-7dp"
            android:layout_below="@+id/logo"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:clickable="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="57.5dp"
                android:gravity="center"
                style="@style/White.Text"
                 android:background="@drawable/selector_button"
                android:textAlignment="center"
                android:text="@string/login"/>
        </LinearLayout>


        <ProgressBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/progressBarLoadActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            style="@android:style/Widget.Holo.Light.ProgressBar.Large"/>

    </RelativeLayout>





</LinearLayout>
